{
  "entities": {
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Represents an auto accessory product.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the product."
        },
        "stock": {
          "type": "number",
          "description": "The current quantity of the product in stock."
        },
        "purchasePrice": {
          "type": "number",
          "description": "The price at which the product was purchased."
        },
        "sellingPrice": {
          "type": "number",
          "description": "The price at which the product is sold."
        },
        "compatibility": {
          "type": "string",
          "description": "Details about which vehicles this product is compatible with."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the product image."
        },
        "lastPurchaseDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date of the last purchase."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the product was created."
        }
      },
      "required": [
        "name",
        "stock",
        "purchasePrice",
        "sellingPrice",
        "compatibility",
        "lastPurchaseDate",
        "createdAt"
      ]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Represents a sale or return transaction.",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Satış",
            "İade"
          ],
          "description": "Type of the transaction."
        },
        "productId": {
          "type": "string",
          "description": "Reference to the Product."
        },
        "productName": {
          "type": "string",
          "description": "Name of the product in the transaction."
        },
        "dateTime": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time of the transaction."
        },
        "quantity": {
          "type": "number",
          "description": "Quantity of the product."
        },
        "amount": {
          "type": "number",
          "description": "Total amount for the transaction. Negative for returns."
        }
      },
      "required": [
        "type",
        "productId",
        "productName",
        "dateTime",
        "quantity",
        "amount"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores details for each auto accessory product."
    },
    "/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "Stores all sale and return transactions."
    }
  }
}
